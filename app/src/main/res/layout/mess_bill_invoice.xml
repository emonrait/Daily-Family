                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tv_total_payment_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="@string/total_bill"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/divider_height_base"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tv_total_payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:paddingLeft="@dimen/padding_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base"
                                android:textStyle="normal" />

                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/black"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/margin_5"
                            android:text="@string/this_is_mobile_generated_invoice"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base"
                            android:textStyle="normal" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_save_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_background_rounded_green"
                    android:text="@string/save_invoice"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_base" />

                <Button
                    android:id="@+id/btn_reportCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_background_rounded_green"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_base" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>